<h1 class='mb-4'>Manage Players</h1>
    <div id="instructions" class='mb-4'>
        <p>Page allows you to manage your players including:</p>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Adding players to your team</li>
            <li class="list-group-item">Updating players information</li>
            <li class="list-group-item">Removing players from your team</li>
            <li class="list-group-item">Retrieve all players on your team</li>
        </ul>
    </div>

    <div id="tableplayerfilter" class='mt-3 mb-1'>
        {{!-- REMINDER: REPLACE NUMBER INPUT WITH SELECT INPUT --}}
        <label for="salary">Search players by salary: (descending) </label>
        <input type="number" id="salary">
        <button type="submit" class="btn btn-primary">Submit Query</button>
        <button type="submut" class="btn btn-info">Reset</button>
    </div>

    <div id="playertable" class='mb-4'>
        <table class='table'>
            <thead class='thead-dark'>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Birthdate</th>
                    <th scope="col">Debut</th>
                    <th scope="col">Jersey #</th>
                    <th scope="col">Team</th>
                    <th scope="col">Rating</th>
                    <th scope="col">Salary</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each rows}}
                <tr>
                    <td>{{this.playerId}}</td>
                    <td>{{this.name}}</td>
                    {{#if this.birthdate}}
                    <td>{{moment this.birthdate format="MM-DD-YYYY"}}</td>
                    {{else}}
                    <td>NULL</td>
                    {{/if}}
                    {{#if this.debut}}
                    <td>{{moment this.debut format="MM-DD-YYYY"}}</td>
                    {{else}}
                    <td>NULL</td>
                    {{/if}}
                    <td>{{this.number}}</td>
                    {{#if this.teamId}}
                    <td>{{this.teamId}}</td>
                    {{else}}
                    <td>NULL</td>
                    {{/if}}
                    <td>{{this.rating}}</td>
                    <td>{{this.salary}}</td>
                    <td>
                        <button class="btn btn-warning">Edit</button>
                        <button class="btn btn-danger">Delete</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <div id="addplayer" class='mb-4'>
        <p>Add a new player:</p>
        <form>
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name">
            </div>
            <div class="form-group">
                <label for="birthdate">Birthdate:</label>
                <input type="date" id="birthdate">
            </div>
            <div class="form-group">
                <label for="debut">Debut:</label>
                <input type="date" id="debut">
            </div>
            <div class="form-group">
                <label for="number">Jersey Number</label>
                <input type="number" id="number">
            </div>
            <div class="form-group">
                <label for="team">Team</label>
                <input type="number" id="teamId">
            </div>
            <div class="form-group">
                <label for="rating">Rating</label>
                <input type="number" id="rating">
            </div>
            <div class="form-group">
                <label for="salary">Salary</label>
                <input type="number" id="salary">
            </div>
                <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
